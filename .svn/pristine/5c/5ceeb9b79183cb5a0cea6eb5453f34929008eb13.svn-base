	                type: "warning",
	                showCancelButton: true,
	                confirmButtonColor: "#DD6B55",
	                confirmButtonText: "OK",
	                closeOnConfirm: false
	            }, function (isConfirm) {
				if(isConfirm){
	            	swal.close();
	            	pastcopper();
				}else{
					swal.close();

				}
	            });
	        });

		 $('.demo4').click(function () {
	            swal({
	                title: "협진 중인 환자입니다.",
