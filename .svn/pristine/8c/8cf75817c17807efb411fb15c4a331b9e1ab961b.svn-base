	}
	.medicine{
		width: 80%;
		margin: 0 auto;
		text-align: center;
		height: 250px;
		overflow: auto;
		display: block;
	}
	.plusbutton{
		background-color: white;
		border: none;
		font-size: 20px;
		float: right;
	}
	.buttontd{
		width: 130px;
	}
